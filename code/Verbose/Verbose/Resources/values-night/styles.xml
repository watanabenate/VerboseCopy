<resources>

    <!-- Base application theme. (GET RID OF?) -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowSoftInputMode">adjustPan</item>
    </style>

	<!-- Main App Theme. -->
	<style name="VerboseTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/verboseColor</item>
		<item name="colorPrimaryDark">@color/verboseColor</item>
		<item name="colorAccent">@color/verboseColor</item>
		<item name="android:windowSoftInputMode">adjustPan</item>
		<item name="android:windowBackground">@color/bg_color</item>
		<item name="android:editTextColor">@color/secondaryTextColor</item>
		<item name="android:textColorHint">@color/hintTextColor</item>
	</style>

	<!-- Login Theme. -->
	<style name="VerboseLoginTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/verboseColor</item>
		<item name="colorPrimaryDark">@color/verboseColor</item>
		<item name="colorAccent">@color/verboseColor</item>
		<item name="android:windowSoftInputMode">adjustPan</item>
	</style>

</resources>
