<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/friend_search_bg">

    <ImageButton
        android:id="@+id/min_new_post"
        android:layout_width="@dimen/profile_size"
        android:layout_height="@dimen/profile_size"
        android:src="@drawable/down_arrow_inv"
        android:scaleType="fitCenter"
        android:background="@color/arrowBgColor"
        android:layout_gravity="left"
        android:layout_margin="@dimen/spacer_width"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_profile_size"/>

    <TextView
        android:layout_width="@dimen/post_width"
        android:layout_height="wrap_content"
        android:text="@string/friend_search"
        android:textStyle="bold"
        android:textColor="@color/postBgColorFlat"
        android:textSize="@dimen/statement_fontsize"
        android:gravity="center_horizontal"
        />

    <SearchView
        android:id="@+id/friend_search_bar"
        android:layout_width="@dimen/post_width"
        android:layout_height="wrap_content"
        android:background="@color/postBgColorFlat"
        android:elevation="1dp"
        android:queryHint="@string/friend_search_hint"
        android:padding="@dimen/spacer_width"
        android:iconifiedByDefault="false"
        />
</LinearLayout>
